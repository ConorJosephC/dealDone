<html>

<head>
  <%- include partials/head.ejs %>
</head><!-- /head -->

<body>

  <header>
    <%- include partials/header.ejs %>
  </header><!-- /header -->

  <h2>All Offers</h2>

  <div class="containermatches">
    <table class="table table-hover">
      <table class="table table-striped table-bordered table-condensed">
        <thead>
          <tr>
            <!-- <th>#</th> -->
            <th>Business Name</th>
            <th>Offer</th>
            <th>Time</th>
            <th>Day</th>
          </tr>
        </thead>

        <tbody>
          <tr>
            <% for(let i= 0; i< offers.length; i++) { %>
            <!-- <td>1</td> -->
            <td><%= offers[i].business.name %></td>
            <td><%= offers[i].body %></td>
            <td><%= offers[i].time.time %></td>
            <td><%= offers[i].time.day %></td>
          </tr>
            <% } %>
        </tbody>
      </table>
    </table>
    </table>

    <br>
    <br>

</div>

  <footer>
    <%- include partials/footer.ejs %>
  </footer>
</body>

</html>
